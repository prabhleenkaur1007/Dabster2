
<div class="row">
    <div class="col-sm-4">
        <h1> Edit Category</h1>
        <form action="/admin/categories/edit/{{category.id}}?_method=PUT " method="POST">
        <div class="form-group">
            <label for="name">Primary</label>
            <input value="{{category.primary}}"    type="text" placeholder="Enter Primary Category" name="primary"  class="form-control ">
        </div>
        <div class="form-group">
            <label for="name">Secondary</label>
            <input value="{{category.secondary}}"    type="text" placeholder="Enter Secondary Category" name="secondary"  class="form-control ">
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Edit Category  </button>
        </div>
        </form>
    </div>
</div>